<?xml version="1.0" encoding="utf-8" ?>
<component name="RowListItem" extends="Group" >
    <interface> 
        <field id="itemContent" type="node" onChange="showcontent"/>
        <field id="focusPercent" type="float" onChange="showfocus"/> 
        <field id="rowFocusPercent" type="float" onChange="showrowfocus"/>
    </interface>
    <children>
        <Poster 
            id="itemPoster" 
            translation="[0,0]" 
            width="280" 
            height="280">
        </Poster>
        <Rectangle
            id="labelBackground"
            color="#000000"
            opacity="0.75"
            translation="[5,250]"
            width="260"
            height="28">
            <Label 
                id="itemLabel"
                horizAlign="left"
                vertAlign="center"
                translation="[10,2]"
                width="240"
                height="28" />
        </Rectangle>
    </children>
    <script type="text/brightscript" uri="./RowListItem.brs" />
</component>